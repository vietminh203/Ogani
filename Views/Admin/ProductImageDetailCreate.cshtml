@{
    Layout = "~/Views/Shared/_layout_admin.cshtml";
    ViewData["page"] = "Product";

    ViewData["Expand"] = "Product Image Detail Create";
    ViewData["linkSub"] = "/admin/ProductView";

}

<form asp-action='ProductImageDetailCreate' enctype="multipart/form-data">
    <label>Image</label>
    <input type='file' name='img' />
    <input name='id' value='@ViewBag.Id' type='hidden'/>
    <button class='btn btn-primary'>Create</button>
</form>