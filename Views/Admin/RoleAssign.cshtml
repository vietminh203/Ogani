@{
    Layout = "~/Views/Shared/_layout_admin.cshtml";
    ViewData["page"] = "User";

    ViewData["Expand"] = "Role Assign";
    ViewData["linkSub"] = "/admin/UserView";

}
@model Ogani.ViewModel.RoleAssignRequest


<div class="container-fluid">
    <div class="card-body">
        <form asp-action="RoleAssign">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @for (var i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-group">
                    <label>
                        @Model.Roles[i].Name
                        <input type="checkbox" asp-for="Roles[i].Selected" />
                        <input type="hidden" asp-for="Roles[i].Id" />
                        <input type="hidden" asp-for="Roles[i].Name" />
                    </label>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>
<div>
    <a asp-action="UserView">Back to List</a>
</div>
