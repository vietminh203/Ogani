@{
    Layout = "~/Views/Shared/_layout_admin.cshtml";
    ViewData["page"] = "Product";

    ViewData["Expand"] = "Product Category Detail";
    ViewData["linkSub"] = "/admin/ProductView";


}
@model Ogani.ViewModel.CategoryAssignRequest
<div class="container-fluid">
    <div class="card-body">
        <form asp-action="ProductCategoryDetail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @for (var i = 0; i < Model.Categories.Count; i++)
            {
                <div class="form-group">
                    <label>
                        @Model.Categories[i].Name
                        <input type="checkbox" asp-for="Categories[i].Selected" />
                        <input type="hidden" asp-for="Categories[i].Id" />
                        <input type="hidden" asp-for="Categories[i].Name" />
                    </label>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>
<div>
    <a asp-action="ProductView">Back to List</a>
</div>
