<!-- Blog Section Begin -->
<section class="blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5">
                <div class="blog__sidebar">
                    <div class="blog__sidebar__search">
                        <form>
                            <input name='keyword' type="text" placeholder="Search...">
                            <button type="submit"><span class="icon_search"></span></button>
                        </form>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>Recent News</h4>
                        <div class="blog__sidebar__recent">
                            @foreach(var re in ViewBag.blogRecent)
                        {
                             <a asp-action='BlogDetail' asp-route-Id="@re.Id" class="blog__sidebar__recent__item">
                                <div class="blog__sidebar__recent__item__pic">
                                    <img style='width:120px' src="/store-image/@re.Image" alt="">
                                </div>
                                <div class="blog__sidebar__recent__item__text">
                                    <p>@re.Title</p>
                                    <span>@re.CreateAt</span>
                                </div>
                            </a>
                        }
                        </div>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>Search By</h4>
                        <div class="blog__sidebar__item__tags">
                            <a href="#">Apple</a>
                            <a href="#">Beauty</a>
                            <a href="#">Vegetables</a>
                            <a href="#">Fruit</a>
                            <a href="#">Healthy Food</a>
                            <a href="#">Lifestyle</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-7">
                <div class="row">
                    @foreach (var blog in ViewBag.Blogs)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="blog__item">
                                <div class="blog__item__pic">
                                    <img src="/store-image/@blog.Image" alt="">
                                </div>
                                <div class="blog__item__text">
                                    <ul>
                                        <li><i class="fa fa-calendar-o"></i> @blog.CreateAt</li>
                                    </ul>
                                    <h5><a href="#">@blog.Title</a></h5>
                                    <a asp-action='BlogDetail' asp-route-Id="@blog.Id" class="blog__btn">READ MORE <span class="arrow_right"></span></a>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="col-lg-12">
                        <paging total-records="Model.TotalRecords"
                                page-no="Model.PageIndex"
                                max-displayed-pages="5"
                                page-size="Model.PageSize"
                                page-size-dropdown-items="5-15-30"
                                show-total-pages="false"
                                show-page-size-nav="false"
                                show-total-records="false"
                                class="float-right mb-2">
                        </paging>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Section End -->
